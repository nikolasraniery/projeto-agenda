<%- include("includes/head") %> <%- include("includes/navbar") %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-5">
      <h1 class="text-center">Criar conta ou entrar</h1>
      <p class="lead text-center">Faça seu login ou cadastre-se</p>

      <%- include("includes/messages") %>

      <div class="row my-5 gap-5">
        <div class="col-lg border rounded-5 p-5 border-gray">
          <h4 class="text-center">Faça seu cadastro</h4>

          <p class="text-center">Se você ainda não possui uma conta, preencha o formulário abaixo para se registrar</p>

          <form action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="mb-3">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email" />
            </div>

            <div class="mb-3">
              <label>Senha</label>
              <input type="password" class="form-control" name="password" />
            </div>

            <div class="d-flex justify-content-center w-100">
              <button type="submit" class="btn btn-primary align-self-center">
                Criar conta
              </button>
            </div>
          </form>
        </div>

        <div class="col-lg border rounded-5 p-5 border-gray">
          <h4 class="text-center">Entrar no sistema</h4>
          <p class="text-center">Se você já possui uma conta, faça seu login preenchendo o formulário abaixo</p>

          <form action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="mb-3">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email" />
            </div>

            <div class="mb-3">
              <label>Senha</label>
              <input type="password" class="form-control" name="password" />
            </div>

            <div class="d-flex justify-content-center w-100">
              <button type="submit" class="btn btn-primary align-self-center">
                Entrar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include("includes/footer") %>
